<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="专辑详情"
        android:textColor="#CCCCCC"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"   >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="表演者："
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/api_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="专辑类型："
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/api_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="介质："
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/api_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="发行时间："
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:singleLine="true"  />

                <TextView
                    android:id="@+id/api_pubdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="出版者："
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/api_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="唱片数："
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:singleLine="true"  />

                <TextView
                    android:id="@+id/api_discs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="条形码："
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:singleLine="true"  />

                <TextView
                    android:id="@+id/api_ean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="15sp" 
                    android:singleLine="true" 
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="曲目    · · · · · · "
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/api_tracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:editable="false"
                android:text=""
                >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.loopj.android.image.SmartImageView
                android:id="@+id/api_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <RatingBar
                android:id="@+id/api_ratebar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numStars="10"
                android:stepSize="0.5" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="豆瓣评分："
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/api_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已评价人数："
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/api_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="null"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>